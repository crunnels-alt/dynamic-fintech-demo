{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "npm install --production"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "echo 'Build step - no compilation needed for Node.js'"
      ]
    }
  },
  "deploy": {
    "startCommand": "npm run start:production"
  }
}