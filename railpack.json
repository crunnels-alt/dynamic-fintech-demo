{
  "$schema": "https://schema.railpack.com",
  "_comment": "Updated to use npm install with proper directory handling",
  "steps": {
    "install": {
      "commands": [
        "ls -la",
        "pwd",
        "npm install --omit=dev"
      ]
    }
  },
  "deploy": {
    "startCommand": "npm run start:production"
  }
}
